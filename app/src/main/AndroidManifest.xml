<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Optional GL ES requirement -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="false" />

    <!-- Permission for Unity->Shell broadcasts (easy protection) -->
    <permission
        android:name="com.horizon.spatialshell.PERMISSION_SHELL_BRIDGE"
        android:protectionLevel="normal" />

    <application
        android:label="SpatialShell"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Bridge receiver: Unity broadcasts commands here -->
        <receiver
            android:name=".ShellBridgeReceiver"
            android:exported="true"
            android:permission="com.horizon.spatialshell.PERMISSION_SHELL_BRIDGE">
            <intent-filter>
                <action android:name="com.horizon.spatialshell.LIST_APPS" />
                <action android:name="com.horizon.spatialshell.LAUNCH_APP" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
